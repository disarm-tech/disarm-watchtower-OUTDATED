{
  "name": "disarm-watchtower",
  "version": "1.0.0-dev5",
  "description": "Disarm Label WatchTower",
  "productName": "Disarm Label WatchTower",
  "copyright": "Disarm Â© 2021",
  "author": "Disarm",
  "main": "./dist/electron/app.js",
  "scripts": {
    "build:electron": "webpack --config electron/webpack.config.prod.js",
    "build:web": "ng build --prod",
    "build": "npm run build:web && npm run build:electron",
    "make:win32": "electron-builder --ia32",
    "make:darwin": "electron-builder --macos",
    "make:cnn:darwin": "python3.7 -m PyInstaller ./imagededup/find_cnn.py --specpath ./imagededup --distpath ./bundles --clean -F",
    "make:cnn:win32": "python -m PyInstaller ./imagededup/find_cnn.py --specpath ./imagededup --distpath ./bundles --clean -F",
    "serve": "ng serve --watch",
    "start": "cross-env NODE_ENV=development npm run build:electron && npm run start:dev",
    "start:dev": "electron --inspect=5858 . -- --devWebView --devBrowser --ignore-certificate-errors",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "private": true,
  "build": {
    "appId": "com.disarm.lw",
    "win": {
      "target": "squirrel",
      "icon": "dist/disarm-watchtower/assets/images/favicons/icons/win/icon.ico",
      "extraResources": [
        "./bundles/find_cnn.exe"
      ]
    },
    "mac": {
      "icon": "dist/disarm-watchtower/assets/images/favicons/icons/mac/icon.icns",
      "extraResources": [
        "./bundles/find_cnn"
      ]
    },
    "files": [
      "!.git",
      "!.idea",
      "!e2e",
      "!src",
      "dist/disarm-watchtower",
      "dist/electron",
      "dist/shared"
    ]
  },
  "dependencies": {
    "@angular/animations": "~12.0.5",
    "@angular/cdk": "^12.1.2",
    "@angular/common": "~12.0.5",
    "@angular/compiler": "~12.0.5",
    "@angular/core": "~12.0.5",
    "@angular/forms": "~12.0.5",
    "@angular/material": "^12.1.2",
    "@angular/platform-browser": "~12.0.5",
    "@angular/platform-browser-dynamic": "~12.0.5",
    "@angular/router": "~12.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "fix-path": "^3.0.0",
    "lodash": "^4.17.21",
    "ngx-electron": "^2.2.0",
    "node-machine-id": "^1.1.12",
    "path": "^0.12.7",
    "python-shell": "^3.0.0",
    "recursive-readdir": "^2.2.2",
    "rxjs": "~6.6.0",
    "sudo-prompt": "^9.2.1",
    "tslib": "^2.1.0",
    "uuid": "^8.3.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.5",
    "@angular/cli": "~12.0.5",
    "@angular/compiler-cli": "~12.0.5",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^14.17.3",
    "@types/python-shell": "^1.0.3",
    "@types/recursive-readdir": "^2.2.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "cross-env": "^7.0.3",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "electron-builder-squirrel-windows": "^22.11.7",
    "electron-icon-maker": "0.0.5",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "prettier": "^2.3.1",
    "thread-loader": "^2.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "~4.2.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.1"
  }
}
